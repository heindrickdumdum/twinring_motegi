<script>
  window.onload = () => {
    //Scroll to ID
    if(window.location.hash) {
      setTimeout(function(){
        const y = document.querySelector(window.location.hash).getBoundingClientRect().top + window.scrollY-50;
        window.scroll({
          top: y,
          behavior: 'smooth'
        });
      },100);
    }


  }  
</script>

