        <span class="mv-heading-subtexts">
          <svg class="u-show-pc">
            <title>巨大ネットの森SUMIKA</title>
            <use xlink:href="<%= svgSprite( SPRITE_SVG , '#sprite-dokidoki-main-title') %>"></use>
          </svg>
          <svg class="u-show-sp">
            <title>巨大ネットの森SUMIKA</title>
            <use xlink:href="<%= svgSprite( SPRITE_SVG , '#sprite-dokidoki-main-title-sp') %>"></use>
          </svg>
        </span>
      </h2>

      <div class="mv-today">
        <div class="mv-today-inner"></div>
      </div>
    </div>
  </div>

  <section class="video-mv l-section">
    <div class="l-container">
      <div class="heading-wrap  l-heading-main">
        <h2 class="heading heading-dokidoki">
          <span class="heading-texts">
            <img class="u-show-pc" src="<%= mix('/assets/images/dokidoki/dokidoki-color-title2.png') %>" alt="dokidoki">
            <img class="u-show-sp" src="<%= mix('/assets/images/dokidoki/dokidoki-color-title2-sp.png') %>" alt="dokidoki">
          </span>
        </h2>
      </div>

