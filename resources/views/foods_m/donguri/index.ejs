<%
  var title = 'Twin Ring Motegi | 森の教習所'
  SPRITE_SVG = '/assets/svg/sprite.svg';
  pageId = 'donguri';
%>
<% include('/partials/data/index') %>
<%- include('/partials/head', { pageId, title }) -%>

<div class="lig-content">
  <div class="subpage subpage-restaurant restaurant-wrapper">
    <div class="mv mv-restaurant mv-subpage-restaurant">


      <ul class="mv-list">
        <li class="mv-item">
          <div class="mv-image mv-image-subpage u-show-pc" style="background-image:url(<%= mix('/assets/images/donguri/mv-img.jpg') %>);"></div>
          <div class="mv-image mv-image-subpage u-show-sp" style="background-image:url(<%= mix('/assets/images/donguri/mv-img-sp.jpg') %>);"></div>
        </li>
      </ul>

      <div class="l-container mv-container">
        <div class="mv-heading hellowoods-mv-heading donguri-mv-heading u-show-pc">
          <%- include('/partials/heading', {
            modifier: 'heading-hellowoods',
            heading_level: 1,
            text: 'Forest Kitchen Donguri',
            subtextvg: 'donguri-top-title',
            altSubtextvg: '森のキッチン どんぐり'
          }) %>
        </div>
        <div class="mv-heading hellowoods-mv-heading donguri-mv-heading u-show-sp">
          <%- include('/partials/heading', {
            modifier: 'heading-hellowoods',
            heading_level: 1,
            text: 'Forest Kitchen Donguri',
            subtextvg: 'donguri-top-title-sp',
            altSubtextvg: '森のキッチン どんぐり'
          }) %>
        </div>

        <div class="u-show-pc mv-today mv-logo mv-granroom-logo" style="background-image: url(<%= mix('/assets/images/donguri/mv-logo.png') %>);">
          <div class="mv-l-inner">
          </div>
        </div>
      </div>
    </div>

    <main>
      <div class="subpage-inner-wrap">
        <div class="subpage-inner">
          <div class="l-section-title u-show-pc">
            <%- include('/partials/heading', {
              modifier: 'heading-wrap-center heading-donguri',
              // subtextvg: 'donguri-main-title',
              // altSubtextvg: `豊かな自然に囲まれたハローウッズの森にあるレストラン 森を満喫した後に、おなかも満足できる食事処です`
              imgPath: mix('/assets/images/donguri/color-title.jpg'),
              alt: '豊かな自然に囲まれたハローウッズの森にあるレストラン 森を満喫した後に、おなかも満足できる食事処です'
            }) %>
          </div>

          <div class="l-section-title u-show-sp">
            <%- include('/partials/heading', {
              modifier: 'heading-wrap-center heading-donguri',
              // subtextvg: 'donguri-main-title-sp',
              // altSubtextvg: `豊かな自然に囲まれたハローウッズの森にあるレストラン 森を満喫した後に、おなかも満足できる食事処です`
              imgPath: mix('/assets/images/donguri/color-title-sp.jpg'),
              alt: '豊かな自然に囲まれたハローウッズの森にあるレストラン 森を満喫した後に、おなかも満足できる食事処です'
            }) %>
          </div>

          <div class="subpage-banner subpage-banner-craft">
            <div class="subpage-banner-inner">
              <img class="u-show-pc" src="<%= mix('/assets/images/donguri/subpage-banner.jpg') %>" alt="豊かな自然に囲まれたハローウッズの森にあるレストラン。森を満喫した後に、おなかも満足できる食事処です。">
              <img class="u-show-sp" src="<%= mix('/assets/images/donguri/subpage-banner-sp.jpg') %>" alt="豊かな自然に囲まれたハローウッズの森にあるレストラン。森を満喫した後に、おなかも満足できる食事処です。">
            </div>
          </div>

          <h2 class="subpage-title">
            <span>店舗情報</span>
          </h2>

          <table class="table table-donguri">
            <tbody>
              <tr class="table-row">
                <th class="table-head">場所</th>
                <td class="table-col">
                  ハローウッズ <a class="link" href="/map_m/">Mapを見る</a>
                </td>
              </tr>

              <tr class="table-row">
                <th class="table-head">営業時間</th>
                <td class="table-col">
                  <a class="link" href="https://www.twinring.jp/hours_m/">ツインリンクもてぎ営業時間内</a>（L.O.営業終了30分前）
                </td>
              </tr>

              <tr class="table-row">
                <th class="table-head">座席数</th>
                <td class="table-col">店内：36<br>
                  <!-- ※クレジットカードはご利用いただけません。 -->
                </td>
              </tr>

              <tr class="table-row">
                <th class="table-head">備考</th>
                <td class="table-col">
                  ・チャイルドシートあり<br/>
                  ・アルコールあり
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- restaurant menu -->
      <%- include('/partials/donguri/section-menu') -%>

      <div class="l-section oak-button">
        <!-- <p class="u-show-sp">
          この他にも、様々なメニューを<br>ご用意しております。
        </p> -->
        <div class="u-show-pc">
          <%- include('/partials/button', {
            modifier: 'restaurant-button donguri-button',
            link: '/foods_m/pdf/donguri_menu_202003.pdf',
            // text: '春のおすすめメニューはこちら（PDF:3.2MB）'
            text: '<span>その他のメニューはこちら (PDF:3.2MB)</span>',
            newTab: true
          }) -%>
        </div>

        <div class="u-show-sp">
          <%- include('/partials/button', {
            modifier: 'restaurant-button donguri-button',
            link: '/foods_m/pdf/donguri_menu_202003.pdf',
            // text: '春のおすすめメニューはこちら（PDF:3.2MB）'
            text: '<span>その他のメニューはこちら (PDF:3.2MB)</span>',
            newTab: true
          }) -%>
        </div>
      </div>

      <!-- other restaurant module-->
      <%- include('/partials/donguri/section-other-restaurant') -%>


    </main>
    <!-- END BOTTOM -->
  </div>
</div>

<%- include('/partials/breadcrumbs', {
  breadcrumbs : getData().data.breadcrumbsDonguri
}) -%>
<%- include('/partials/footer', { pageId } ) -%>
