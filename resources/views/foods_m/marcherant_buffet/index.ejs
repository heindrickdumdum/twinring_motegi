          <div class="l-section-title">
            <%- include('/partials/heading', {
              modifier: 'heading-hellowoods heading-other-restaurant',
              heading_level: 1,
              text: 'Recommend',
              subtextvg: 'marcherant-dinner-buffet-recommend',
              altSubtextvg: 'Recommend'
