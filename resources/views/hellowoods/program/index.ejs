  <section class="subpage-section subpage-section-free-walk">
    <div class="subpage-inner">
      <div class="l-section-title u-show-pc">
        <%- include('/partials/heading', {
          modifier: 'heading-gradient-tobottom heading-walk heading-free-walk',
