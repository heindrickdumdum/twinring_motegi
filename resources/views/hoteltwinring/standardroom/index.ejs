  pageId = 'standardroom';
%>
<%- include('/partials/data/index') -%>
<%- include('/partials/head', { pageId, title }) -%>

<div class="lig-content">
  <div class="subpage subpage-hotel hotel-wrapper">
    <div class="mv mv-subpage mv-subpage-reserve">
      <ul class="mv-list">
        <li class="mv-item">
          <div class="u-show-pc mv-image" style="background-image:url(<%= mix('/assets/images/standardroom/mv-img.jpg') %>);"></div>
          <div class="u-show-sp mv-image" style="background-image:url(<%= mix('/assets/images/standardroom/mv-img-sp.jpg') %>);"></div>
        </li>
      </ul>

      <div class="l-container mv-container">
        <div class="mv-heading hellowoods-mv-heading standardroom-mv-heading">
          <%- include('/partials/heading', {
            modifier: 'heading-hellowoods',
            heading_level: 1,
            text: 'Standard Room',
            alt: '',
            subtextvg: 'standardroom-top-title',
            altSubtextvg: 'スーぺリアファミリールーム'
          }) %>
        </div>
      </div>
    </div>
    
    <main>
      
      <div class="l-section-title">
        <%- include('/partials/heading', {
          modifier: 'heading-main svg-block',
          text: `Standard Room`,
          altSubtext: ``,
          subtextvg: `standardroom-standard-content-title`,
          altSubtextvg: `森を感じさせる癒しのアメニティ`
