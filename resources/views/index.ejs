<%- include('/partials/head', { title }) -%>

<div class="mv">
  <div class="mv-buttons">
    <ul class="mv-buttons-list">
      <li class="mv-buttons-item">
        <a class="mv-buttons-link" href="#">
          <span>料金<br>・チケット</span>
        </a>
      </li>
      <li class="mv-buttons-item">
        <a class="mv-buttons-link" href="#">
          <span>アクセス</span>
        </a>
      </li>
    </ul>
  </div>
  <ul class="mv-list">
    <li class="mv-item">
      <div class="mv-image" style="background-image:url(<%= mix('/assets/images/mv-img.png') %>);"></div>
    </li>
  </ul>

  <div class="l-container mv-container">
    <h2 class="mv-heading">
      <span class="mv-heading-texts">
        <img src="<%= mix('/assets/images/mv-twinring-motegi.png') %>" alt="Twinring Motegi">
      </span>
      <span class="mv-heading-subtexts">
        <img src="<%= mix('/assets/images/mv-heading.svg') %>" alt="家族にちょうどいい冒険を">
      </span>
    </h2>

    <div class="mv-today">
      <div class="mv-today-inner">
        <img class="mv-today-texts" src="<%= mix('/assets/images/mv-today-texts.png') %>" alt="">
        <span class="mv-today-time">10:00-17:00</span>
        <span class="mv-today-degree">
          <i class="mv-today-degree-icon">
            <svg>
              <title>Sun</title>
              <use xlink:href="<%= svgSprite('/assets/svg/sprite.svg', '#sprite-sun') %>"></use>
            </svg>
          </i>
          <span class="mv-today-celcius-value">28</span>
          <span class="mv-today-celcius">&#176;c</span>
        </span>
      </div>
    </div>
  </div>
</div>

<div class="l-feature">
  <section class="feature">
    <div class="l-container">
      <ul class="feature-list">
        <%
          featureContent.forEach(item => {
        %>
        <li class="feature-item">
          <%- include('/partials/article', {
            'category': item.category,
            'image': item.image,
            'heading': item.heading,
            'date': item.date,
            'link': item.link
          }) %>
        </li>
        <% }) %>
      </ul>
    </div>
  </section>
</div>

<div class="l-parkmap">
  <section class="parkmap">
    <div class="l-container parkmap-container">
      <%- include('/partials/heading', {
        'modifier': 'heading-wrap-parkmap',
        'texts': mix('/assets/images/top/parkmap/parkmap.png'),
        'alt': 'Park Map',
        'subtextsSvg': 'parkmap-subtexts',
        'altSubtexts': '',
      }) %>


      <div class="parkmap-inner">
        <div class="parkmap-image">
          <ul class="parkmap-image-list">
            <%
              for(x=1; x <= 7; x++) {
            %>
            <li class="parkmap-image-item"></li>
            <% } %>
          </ul>
        </div>
        <div class="parkmap-right">
          <ul class="parkmap-list">
            <%
              parkmapButtons.forEach( button => {
            %>
            <li class="parkmap-item">
              <a class="parkmap-link" href="<%- button.link %>"><%- button.texts %>
                <i class="parkmap-link-icon">
                  <%- include('/partials/svg', {
                    'name': 'arrow'
                  }) %>
                </i>
              </a>
            </li>
            <% }) %>
            <li class="parkmap-item parkmap-item-last">
              <%- include('/partials/button', {
                'modifier': 'button-parkmap',
                'texts': 'エリア・施設一覧を見る',
                'link': '#'
              }) %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</div>

