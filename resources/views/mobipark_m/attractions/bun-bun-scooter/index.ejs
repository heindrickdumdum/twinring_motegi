<%
  var title = 'Twin Ring Motegi'
  SPRITE_SVG = '/assets/svg/sprite.svg';
%>

<%
  recommend = [
    {
      'image': mix('/assets/images/top/how-to/img1.jpg'),
      'heading': '巨大ネットの森SUMIKA',
      'buttonLink': '#',
    },
    {
      'image': mix('/assets/images/top/how-to/img2.jpg'),
      'heading': '森感覚アスレチックDOKIDOKI',
      'buttonLink': '#',
    },
    {
      'image': mix('/assets/images/top/how-to/img3.jpg'),
      'heading': '迷宮森殿ITADAKI',
      'buttonLink': '#',
    }
  ]
%>

<%
  pickup = [
    {
      'image': mix('/assets/images/dokidoki/feature/img1.png'),
      'heading': `2019 FIM MotoGP™ 世界選手権シリーズ第16戦 MOTUL<br>日本グランプリ`,
      'date': '2019.11.02 〜 2019.11.03',
      'link': '#',
      },
    {
      'image': mix('/assets/images/dokidoki/feature/img2.png'),
      'heading': '2019 FIM MotoGP™ 世界選手権シリーズ第16戦 MOTUL<br>日本グランプリ',
      'date': '2019.11.02 〜 2019.11.03',
      'link': '#',
    },
    {
      'image': mix('/assets/images/dokidoki/feature/img3.png'),
      'heading': 'モトレーサー タイムアタック選手権2019予選',
      'date': '2019.11.02 〜 2019.11.03',
      'link': '#',
    },
    {
      'image': mix('/assets/images/dokidoki/feature/img4.png'),
      'heading': '音と光のシンフォニー　ツインリンクもてぎ花火の祭典（夏）',
      'date': '2019.11.02 〜 2019.11.03',
      'link': '#',
    }
  ]
%>

<%- include('/partials/head', { title }) -%>

<div class="subpage subpage-withbottombanner subpage-acro-x">
  <div class="mv mv-subpage">
    <ul class="mv-list">
      <li class="mv-item">
        <div class="mv-image" style="background-image:url(<%= mix('/assets/images/bun-bun-scooter/mv-img.png') %>);"></div>
      </li>
    </ul>
  </div>

  <div class="subpage-inner l-container">
    <div class="heading-wrap heading-wrap-subpage heading-wrap-acro-x">
      <h2 class="heading">
        <span class="heading-texts">
          <img src="<%= mix('/assets/images/bun-bun-scooter/subpage-title.png') %>" alt="">
        </span>
      </h2>
    </div>

    <!-- YOUTUBE -->
    <div class="subpage-youtube">
      <div class="youtube-iframe-container">
        <iframe width="100%" height="587" src="https://www.youtube.com/embed/cR0RnUePzQc" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>
    </div>

    <h3 class="subpage-title">
      <span>アトラクション情報</span>
    </h3>

    <p>転倒しない自立式バイクで初めての運転操作にチャレンジ。かわいいみつばちと一緒に音楽を聞きながら<br />お散歩しよう。</p>

    <table class="table">
      <tbody>
        <tr class="table-row">
          <th class="table-head">場所</th>
          <td class="table-col">モビパーク内</td>
        </tr>

        <tr class="table-row">
          <th class="table-head">所要時間</th>
          <td class="table-col">約5分
          </td>
        </tr>

        <tr class="table-row">
          <th class="table-head">雨天の運行</th>
          <td class="table-col">雨天でも営業いたしております。
          </td>
        </tr>

        <tr class="table-row">
          <th class="table-head">対象者</th>
          <td class="table-col">3歳以上
          </td>
        </tr>

        <tr class="table-row">
          <th class="table-head">身長制限</th>
          <td class="table-col">なし</td>
        </tr>

        <tr class="table-row">
          <th class="table-head">料金</th>
          <td class="table-col">
            モビパークパスポート対象<br>アトラクションチケット利用：500円
          </td>
        </tr>

        <tr class="table-row">
          <th class="table-head">ご利用にあたって</th>
          <td class="table-col">

          </td>
        </tr>

      </tbody>
    </table>
  </div>

  <section class="subpage-how-to-enjoy">
    <div class="subpage-how-to-enjoy-inner">
      <div class="l-section-title">
        <%- include('/partials/heading', {
          'modifier': 'heading-enjoy-bunbun',
          'text': mix('/assets/images/how-to-enjoy.png'),
          'alt': 'ぶんぶんスクーターを楽しむポイント',
          'subtextvg': 'bun-bun-scooter-subtext',
          'altSubtext': '',
        }) %>
      </div>

      <div class="how-to-content">
        <div class="media media-subpage media-subpage-bunbun u-clear">
          <div class="media-left">
            <div class="media-bg">
              <div class="media-thumb">
                <div style="background-image: url(<%= mix('https://via.placeholder.com/350x150') %>);"></div>
              </div>
            </div>
          </div>
          <div class="media-right">
            <h4 class="media-title"><span>転倒しないスクーターで乗り物デビュー！</span></h4>
            <p class="media-desc">
              スクーターのように手でアクセルとブレーキを操作。転倒しない<br>から自転車に乗れない子どもでも安心して楽しめます。
            </p>

            <div class="media-bottom">
              <div class="media-note">
                <img class="media-note-flag" src="<%= mix('/assets/images/img-flag.png') %>" alt="">
                <img class="media-note-acorn" src="<%= mix('/assets/images/img-acorn.png') %>" alt="">
                <div class="media-note-text">
                  乗り物デビューできタネ！
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="media media-subpage media-subpage-bunbun u-clear">
          <div class="media-left">
            <div class="media-bg">
              <div class="media-thumb">
                <div style="background-image: url(<%= mix('https://via.placeholder.com/350x150') %>);"></div>
              </div>
            </div>
          </div>
          <div class="media-right">
            <h4 class="media-title">
              <span>
                みつばちに乗ってお花畑を散歩！
              </span>
            </h4>
            <p class="media-desc">
              みつばちにデザインされたスクーターでお花畑をぐるっと<br>
              1周。写真スポットにぴったり！
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- BOTTOM -->

  <div class="call-to-action">
    <div class="l-container">
      <div class="call-to-action-wrapper">
        <div class="call-to-action-inner">
          <%- include('/partials/heading', {
            'modifier': 'heading-bunbun',
            'text': mix('/assets/images/bun-bun-scooter/cta-heading.png'),
            'alt': 'ぶんぶんスクーターをもっと楽しむ',
            'altSubtext': '',
            'subtext': ''
          }) %>
          <div class="call-to-action-description">
            <p class="call-to-action-description-text">
              ぶんぶんスクーターのこだわりポイントや、知っていると<br>
              もっと楽しくなる情報を配信中しています。
            </p>
          </div>
          <div class="l-button l-button-call-to-action">
            <%- include('/partials/button', {
              'modifier': 'button-sumika',
              'text': 'もっと見る',
              'link': '#'
            }) %>
          </div>
          <span class="call-to-action-dot call-to-action-dot-1">
            <img src="<%- mix('/assets/images/sumika/net-sumika/sumika-net-1.png')%> ">
          </span>
          <span class="call-to-action-dot call-to-action-dot-2">
            <img src="<%- mix('/assets/images/sumika/net-sumika/sumika-net-2.png')%> ">
          </span>
          <span class="call-to-action-dot call-to-action-dot-3">
            <img src="<%- mix('/assets/images/sumika/net-sumika/sumika-net-3.png')%> ">
          </span>
          <span class="call-to-action-dot call-to-action-dot-4">
            <img src="<%- mix('/assets/images/sumika/net-sumika/sumika-net-4.png')%> ">
          </span>
        </div>
      </div>
    </div>
  </div>

  <div class="banner-cta">
    <div class="l-container">
      <div class="banner-cta-bottom-inner">
        <img src="<%- mix('/assets/images/sumika/company-logo.jpg')%> ">
      </div>
    </div>
  </div>

  <section class="subpage-recommendation">
    <div class="l-section-title">
      <%- include('/partials/heading', {
        'modifier': 'heading-recommendation',
        'text': mix('/assets/images/recommendation.png'),
        'alt': 'recommendation',
        'altSubtext': '',
        'subtextvg': 'recommendation-subtext'
      }) %>
    </div>

    <div class="l-container">
      <ul class="feature-list feature-list-no-design">
        <% recommend.forEach(item => { %>
        <li class="feature-item">
          <%- include('/partials/article-no-design', {
            'image': item.image,
            'heading': item.heading,
            'buttonLink': item.buttonLink,
            'buttonText': 'モビパーク'
          }) %>
        </li>
        <% }) %>
      </ul>
    </div>
  </section>

  <section class="subpage-pickup">
    <div class="l-section-title">
      <%- include('/partials/heading', {
        'modifier': 'heading-pickup',
        'text': mix('/assets/images/pickup.png'),
        'alt': 'pickup',
        'altSubtext': '',
        'subtextvg': 'pickup'
      }) %>
    </div>

    <div class="l-container">
      <ul class="feature-list">
        <% pickup.forEach(item => { %>
        <li class="feature-item">
          <%- include('/partials/article', {
            'category': item.category,
            'image': item.image,
            'heading': item.heading,
            'date': item.date,
            'link': item.link
          }) %>
        </li>
        <% }) %>
      </ul>
    </div>
  </section>

  <!-- END BOTTOM -->
</div>

<%- include('/partials/footer') -%>
