%>

<%- include('./../partials/head', { title }) -%>

<div class="mv-mobipark">
  <ul class="mv-list">
    <li class="mv-item">
      <div class="mv-image" style="background-image:url(<%= mix('/assets/images/dokidoki/mv-img.png') %>);"></div>
    </li>
  </ul>

  <div class="l-container mv-container">
    <h2 class="mv-heading">
      <span class="mv-heading-text">
        <svg>
          <title>Mobipark</title>
          <use xlink:href="<%= svgSprite('/assets/svg/sprite.svg', '#sprite-mobipark') %>"></use>
        </svg>
      </span>
      <span class="mv-heading-subtext">
        <svg>
          <title>Mobipark</title>
          <use xlink:href="<%= svgSprite('/assets/svg/sprite.svg', '#sprite-mobipark-subtext') %>"></use>
        </svg>
      </span>
    </h2>

    <div class="mv-today">
      <div class="mv-today-inner">
      </div>
    </div>
  </div>
</div>

<div class="l-section">
  <section class="mobipark-info">
      <div class="l-section-title">
        <%- include('/partials/heading', {
          'modifier': 'heading-net-dokidoki',
          'text': mix('/assets/images/information.png'),
          'alt': 'information',
          'altSubtext': '',
          'subtextvg': 'info-subtext'
        }) %>
      </div>

      <div class="l-container">
        <ul class="info-list">
          <%
            info.forEach(item => {
          %>

          <li class="info-item"><%= item.desc %></li>

          <% }) %>
        </ul>
      </div>
  </section>
</div>

<!-- BOTTOM -->

<div class="dokidoki-cta-bottom">
  <div class="l-container">
    <div class="dokidoki-cta-bottom-inner">
      <img src="<%= mix('/assets/images/banner-img.png') %>">
    </div>
  </div>
</div>

<section class="dokidoki-recommendation">
  <div class="l-section-title">
    <%- include('/partials/heading', {
      'modifier': 'heading-net-dokidoki',
      'text': mix('/assets/images/dokidoki/recommendation.png'),
      'alt': 'recommendation',
      'altSubtext': '',
      'subtextvg': 'recommendation-subtext'
    }) %>
  </div>

  <div class="l-container">
    <ul class="feature-list feature-list-no-design">
      <% recommend.forEach(item => { %>
      <li class="feature-item">
        <%- include('/partials/article-no-design', {
          'image': item.image,
          'heading': item.heading,
          'buttonLink': item.buttonLink,
          'buttonText': 'モビパーク'
        }) %>
      </li>
      <% }) %>
    </ul>
  </div>
</section>

<section class="dokidoki-pick-up">
  <div class="l-section-title">
    <%- include('/partials/heading', {
      'modifier': 'heading-net-dokidoki',
      'text': mix('/assets/images/dokidoki/pickup.png'),
      'alt': 'recommendation',
      'altSubtext': '',
      'subtextvg': 'pickup'
    }) %>
  </div>

  <div class="l-container">
    <ul class="feature-list">
      <% pickup.forEach(item => { %>
      <li class="feature-item">
        <%- include('/partials/article', {
          'category': item.category,
          'image': item.image,
          'heading': item.heading,
          'date': item.date,
          'link': item.link
        }) %>
      </li>
      <% }) %>
    </ul>
  </div>
</section>
<!-- END BOTTOM -->

<%- include('./../partials/footer') -%>