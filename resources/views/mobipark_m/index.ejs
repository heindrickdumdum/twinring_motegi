  <div class="l-section-title">
    <%- include('/partials/heading', {
      'modifier': 'heading-net-dokidoki',
      'text': mix('/assets/images/dokidoki/pickup.png'),
      'alt': 'recommendation',
      'altSubtext': '',
      'subtextvg': 'pickup'
    }) %>
  </div>

  <div class="l-container">
    <ul class="feature-list">
      <% pickup.forEach(item => { %>
      <li class="feature-item">
        <%- include('/partials/article', {
          'category': item.category,
          'image': item.image,
          'heading': item.heading,
          'date': item.date,
          'link': item.link
        }) %>
      </li>
      <% }) %>
