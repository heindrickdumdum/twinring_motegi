            <ul class="slider-indicator">
              <li class="indicator-item"></li>
              <li class="indicator-item"></li>
              <li class="indicator-item"></li>
              <li class="indicator-item"></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
