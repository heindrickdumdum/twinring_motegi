<%
if (typeof modifier === 'undefined') {
  var modifier = '';
}

if (typeof type === 'undefined') {
  var type = '';
}

if (typeof date === 'undefined') {
  var date = '';
}

if (typeof buttonText === 'undefined') {
  var buttonText = '';
}
%>

<article class="article article-no-design <%- modifier %>">
  <a href="<%- buttonLink -%>" class="article-no-design-link">
    <% if(category) { %>
    <span class="article-category<% if(category === 'NEWS') { %> article-category-news<% } %>"><%- category %></span>
    <% } %>
    <div class="article-image-wrap">
      <div class="article-image"
           style="background-image: url(<%= (image) ? image : mix('/assets/images/noimage.jpg') %>)"></div>
    </div>
    <% if(type) { %>
      <span class="article-type article-type-<%- type %>"><%- type %></span>
    <% } %>

    <h3 class="article-heading"><%- heading %></h3>

    <% if(date) { %>
      <p class="article-period">
        開催期間：<time class="article-period-date" datetime="P1D"><%- date %></time>
      </p>

    <% } %>

    <% if(buttonText) { %>
    <%- include('/partials/button-gradient', {
      modifier: 'button-gradient-cmn',
      text: buttonText,
      link: buttonLink
    }) %>
    <% } %>
  </a>
</article>
