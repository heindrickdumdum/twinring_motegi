    </ul>
    <ul id="program-list" class="tiles tilesGoodsList" data-tab="1">
      <% dataGoodList.forEach(item => { %>
        <li class="tile program-item program-item-goods" data-tab="<%- item.tab %>">
            <div class="tileImageWrap">
              <img src="<%- item.imgPath -%>" alt="<%- item.alt -%>">
            </div>
            <div class="tileDescWrap">
              <p class="title <%- item.mods -%>"><%- item.title -%></p>
            </div>
        </li>
      <% } ) %>
