<%
  headerImageList = [
    list1 = [
      {
        'image': mix('/assets/images/header/activity-img2.jpg'),
        'text': 'ハローウッズ',
      },
      {
        'image': '',
        'text': 'モビパーク',
      },
      {
        'image': mix('/assets/images/header/access-img1.jpg'),
        'text': '森と星空のキャンプビレッジ',
      },
      {
        'image': mix('/assets/images/header/access-img2.jpg'),
        'text': 'ホテルツインリング',
      },
      {
        'image': mix('/assets/images/header/access-img3.jpg'),
        'text': 'モータースポーツ',
      },
      {
        'image': mix('/assets/images/header/access-img4.jpg'),
        'text': 'ホンダコレクションホール',
      },
      {
        'image': '',
        'text': '安全運転スクール',
      },
      {
        'image': '',
        'text': '場内マップ',
      }
    ]
  ]

%>


<div class="header-sub-content-inner header-sub-content-inner-access js-header-sub-content-inner" id="header-sub-access">

  <a class="header-sub-top-button" href="#">
    <i class="header-sub-top-button-icon">
      <%- include('/partials/svg', {
        'name': 'location'
      }) %>
    </i>
    エリア・施設TOP
    <i class="header-sub-top-button-arrow">
      <%- include('/partials/svg', {
        'name': 'arrow'
      }) %>
    </i>
  </a>

  <div class="header-sub-inner">
    <div class="header-sub-inner-block">
      <div class="header-sub-image-list-wrap">
        <% headerImageList.forEach( list => { %>
          <ul class="header-sub-image-list<% if(list.length > 4) { %> header-sub-image-list-col5<% } %>">
            <% list.forEach( item => { %>
            <li class="header-sub-image-item">
              <a class="header-sub-image-link" href="#">
                <div class="header-sub-image<% if(list.length > 3) { %> header-sub-image-small<% } %>" style="background-image: url(<%- item.image %>);"></div>
                <span class="header-sub-image-text"><%- item.text %></span>
              </a>
            </li>
            <% }) %>
          </ul>
        <% }) %>
      </div>
    </div>
  </div>

</div>
