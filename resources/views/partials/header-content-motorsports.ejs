<%
  headerImageList = [
    list1 = [
      {
        'image': mix('/assets/images/header/motor-img1.jpg'),
        'text': 'MotoGP',
      },
      {
        'image': mix('/assets/images/header/motor-img2.jpg'),
        'text': 'トライアル世界選手権',
      },
      {
        'image': mix('/assets/images/header/motor-img3.jpg'),
        'text': 'SUPER GT',
      }
    ],
    list2 = [
      {
        'image': mix('/assets/images/header/motor-img4.jpg'),
        'text': '２＆４レース',
      },
      {
        'image': mix('/assets/images/header/motor-img5.jpg'),
        'text': '全日本ロードレース選手権',
      },
      {
        'image': mix('/assets/images/header/motor-img6.jpg'),
        'text': 'スーパー耐久',
      }
    ]
  ]

  headerRightLinks = [
    { 'text': '1. 家族でレーシングコースを走ってみよう', 'link': '#' },
    { 'text': '2. スクールでレベルアップしよう', 'link': '#' },
    { 'text': '3. 本格的な走りを体験しよう', 'link': '#' },
    { 'text': '4. 入門クラスのレースに参加しよう', 'link': '#' },
    { 'text': '5. 本格的なレースに参加しよう', 'link': '#' }
  ]


  headerImageBottomList = [
    { 'text': '全日本トライアル選手権', 'link': '#' },
    { 'text': '全日本カート選手権', 'link': '#' }
  ]

  headerBottomLinks = [
    { 'text': '森のクラフト体験', 'link': '#' },
    { 'text': '全日本カート選手権', 'link': '#' },
  ]
%>

<div class="header-sub-content-inner header-sub-content-inner-motorsports js-header-sub-content-inner" id="header-sub-motorsports">

  <a class="header-sub-top-button" href="#">
    <i class="header-sub-top-button-icon">
      <%- include('/partials/svg', {
        'name': 'motorsports'
      }) %>
    </i>
    モータースポーツTOP
    <i class="header-sub-top-button-arrow">
      <%- include('/partials/svg', {
        'name': 'arrow'
      }) %>
    </i>
  </a>

  <div class="header-sub-inner">
    <div class="header-sub-inner-block">
      <div class="header-sub-image-list-wrap">
        <% headerImageList.forEach( list => { %>
          <ul class="header-sub-image-list">
            <% list.forEach( item => { %>
            <li class="header-sub-image-item">
              <a class="header-sub-image-link" href="#">
                <div class="header-sub-image<% if(list.length > 3) { %> header-sub-image-small<% } %>" style="background-image: url(<%- item.image %>);"></div>
                <span class="header-sub-image-text"><%- item.text %></span>
              </a>
            </li>
            <% }) %>
          </ul>
        <% }) %>

        <ul class="header-sub-bottom-list">
          <% headerImageBottomList.forEach( item => { %>
          <li>
            <a href="<%- item.link %>"><%- item.text %></a>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>
    <div class="header-sub-inner-block header-sub-inner-block-right">
      <a class="header-sub-top-button header-sub-top-button-right" href="#">
        サーキットを走るTOP
        <i class="header-sub-top-button-arrow">
          <%- include('/partials/svg', {
            'name': 'arrow'
          }) %>
        </i>
      </a>

      <div class="header-sub-image" style="background-image: url(<%= mix('/assets/images/header/motor-img7.jpg') %>);"></div>

      <ul class="header-sub-button-list">
        <% headerRightLinks.forEach( item => { %>
        <li class="header-sub-button-item">
          <a class="header-sub-button-link" href="<%- item.link %>">
            <%- item.text %>
            <i class="header-sub-button-link-icon">
              <%- include('/partials/svg', {
                'name': 'arrow'
              }) %>
            </i>
          </a>
        </li>
        <% }) %>
      </ul>
    </div>
  </div>
  <div class="header-sub-bottom">
    <ul class="header-sub-bottom-list">
      <% headerBottomLinks.forEach( item => { %>
      <li>
        <a href="<%- item.link %>"><%- item.text %></a>
      </li>
      <% }) %>
    </ul>
  </div>

</div>
