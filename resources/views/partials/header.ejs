<%
  topNav = [
    {
      text: 'もてぎの楽しみ方',
      link: '#',
    },
    {
      text: 'ニュース・イベント',
      link: '#',
    },
    {
      text: '営業時間',
      link: '#',
    },
    {
      text: '料金・チケット',
      link: '#',
    },
    {
      text: 'よくあるご質問',
      link: '#',
    },
    {
      text: 'アクセス',
      link: '#',
    }
  ]


  bottomNav = [
    {
      modifier: 'header-bottom-item-location',
      text: 'エリア・施設',
      link: '#header-sub-access',
      icon: 'location'
    },
    {
      modifier: 'header-bottom-item-activity',
      text: 'アトラクション・<br>アクティビティ',
      link: '#header-sub-attraction',
      icon: 'activity'
    },
    {
      modifier: 'header-bottom-item-motorsports',
      text: 'モーター<br>スポーツ',
      link: '#header-sub-motorsports',
      icon: 'motorsports'
    },
    {
      modifier: 'header-bottom-item-camp',
      text: 'ホテル・<br>キャンプ',
      link: '#',
      icon: 'camp'
    },
    {
      modifier: 'header-bottom-item-restaurant',
      text: 'レストラン',
      link: '#',
      icon: 'restaurant'
    },
    {
      modifier: 'header-bottom-item-shop',
      text: 'グッズ＆<br>ショップ',
      link: '#',
      icon: 'shop'
    }
  ]
%>


<div class="l-header">
  <div class="l-container">
    <header>
      <div class="l-header-top">
        <h1 class="l-header-top-logo">
          <a class="header-logo" href="/">
            <img src="<%= mix('/assets/images/logo.svg') %>" alt="Twin Ring Motegi">
          </a>
        </h1>
        <div class="l-header-top-right">
          <ul class="header-top-others">
            <li class="header-top-others-item header-top-others-item-logo">
              <a class="header-top-others-link" ref="#">
                <img src="<%= mix('/assets/images/logo-motogp.png') %>" alt="MotoGP">
              </a>
            </li>
            <li class="header-top-others-item">
              <a class="header-top-others-link" href="#">
                <span class="header-top-others-lang-text">LANGUAGE
                  <i class="header-top-others-lang-icon">
                    <svg>
                      <title>arrow-down</title>
                      <use xlink:href="<%= svgSprite('/assets/svg/sprite.svg', '#sprite-arrow-down') %>"></use>
                    </svg>
                  </i>
                </span>
              </a>
            </li>
          </ul>
          <nav class="header-top-nav">
            <%
              topNav.forEach( topNavItem => {
            %>
            <li class="header-top-nav-item">
              <a class="header-top-nav-link" href="<%- topNavItem.link %>"><%- topNavItem.text %></a>
            </li>
            <% }) %>
          </nav>
        </div>
      </div>

      <div class="l-header-bottom">
        <nav>
          <ul class="header-bottom-list">
            <%
              bottomNav.forEach( bottomNavItem => {
            %>
            <li class="header-bottom-item<%- ' '+bottomNavItem.modifier %>">
              <a class="header-bottom-link js-header-button" href="<%- bottomNavItem.link %>">
                <span class="header-bottom-link-text"><%- bottomNavItem.text %></span>
                <i class="header-bottom-icon">
                  <%- include('/partials/svg', {
                    'name': bottomNavItem.icon
                  }) %>
                </i>
              </a>
            </li>
            <% }) %>
          </ul>
        </nav>
      </div>
    </header>
  </div>

  <div class="header-sub-content-wrap" id="js-header-sub">
    <div class="header-sub-content">
      <span class="header-sub-close" id="js-header-close">閉じる</span>

      <%- include('/partials/header-content-attraction') %>
      <%- include('/partials/header-content-access') %>
      <%- include('/partials/header-content-motorsports') %>
    </div>
  </div>
</div>
