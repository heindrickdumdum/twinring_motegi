<section class="l-container l-container-mobi-guide section-mobipark-guide-filter">
  <div class="heading-wrap heading-main heading-main-mobipark-guide">
    <div class="l-section-title">
      <%- include('/partials/heading', {
        modifier: 'heading-wrap heading-wrap-auto',
        text: '対象年齢・エリアなどで<br class="u-show-sp">絞り込みができます',
        alt: '対象年齢・エリアなどで絞り込みができます',
        altSubtext: '',
        subtextvg: ''
      }) %>
    </div>

    <div class="guide-filter">
      <div class="row">
        <div class="tag">未就学児</div>
        <div class="input-wrapper">
          <input type="checkbox" id="checkbox-1-1" class="age-checkbox" value="0"><label for="checkbox-1-1">0歳</label>
          <input type="checkbox" id="checkbox-1-2" class="age-checkbox" value="1"><label for="checkbox-1-2">1歳</label>
          <input type="checkbox" id="checkbox-1-3" class="age-checkbox" value="2"><label for="checkbox-1-3">2歳</label>
          <input type="checkbox" id="checkbox-1-4" class="age-checkbox" value="3"><label for="checkbox-1-4">3歳</label>
          <input type="checkbox" id="checkbox-1-5" class="age-checkbox" value="4"><label for="checkbox-1-5">4歳</label>
          <input type="checkbox" id="checkbox-1-6" class="age-checkbox" value="5"><label for="checkbox-1-6">5歳</label>
          <input type="checkbox" id="checkbox-1-7" class="age-checkbox" value="6"><label for="checkbox-1-7">6歳</label>
        </div>
      </div>
      <div class="row">
        <div class="tag">小学生</div>
        <div class="input-wrapper">
          <input type="checkbox" id="checkbox-2-1" class="grade-checkbox big-checkbox" value="1"><label for="checkbox-2-1">1年生</label>
          <input type="checkbox" id="checkbox-2-2" class="grade-checkbox big-checkbox" value="2"><label for="checkbox-2-2">2年生</label>
          <input type="checkbox" id="checkbox-2-3" class="grade-checkbox big-checkbox" value="3"><label for="checkbox-2-3">3年生</label>
          <input type="checkbox" id="checkbox-2-4" class="grade-checkbox big-checkbox" value="4"><label for="checkbox-2-4">4年生</label>
          <input type="checkbox" id="checkbox-2-5" class="grade-checkbox big-checkbox" value="5"><label for="checkbox-2-5">5年生</label>
          <input type="checkbox" id="checkbox-2-6" class="grade-checkbox big-checkbox" value="6"><label for="checkbox-2-6">6年生</label>
        </div>
      </div>
      <div class="row">
        <div class="tag">エリア</div>
        <div class="input-wrapper button-holder">
          <input type="checkbox" id="checkbox-3-1" class="area-checkbox big-checkbox" value="mobipark"><label for="checkbox-3-1">モビパーク</label>
          <input type="checkbox" id="checkbox-3-2" class="area-checkbox big-checkbox" value="hellowoods"><label for="checkbox-3-2">ハローウッズ</label>
          <input type="checkbox" id="checkbox-3-3" class="area-checkbox big-checkbox" value="honda"><label for="checkbox-3-3">ホンダコレクションホール</label>
        </div>
      </div>
      <div class="row">
        <div class="tag">対象</div>
        <div class="input-wrapper button-holder">
          <input type="checkbox" id="passportCheckbox" class="passport-checkbox" value="passport"><label for="passportCheckbox">モビパークパスポート</label>
        </div>
      </div>
    </div>
  </div>
  <div class="pdf-link">
    <a href="">対象年齢・料金一覧表(PDF) <img class="pdf-icon" src="<%= mix('/assets/images/pdf-icon.png') %>" alt="PDF">
    </a>
  </div>
</section>

