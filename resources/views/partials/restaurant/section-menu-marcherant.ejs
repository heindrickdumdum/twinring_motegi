<section class="restaurant-menu marcherant-menu">
  <div class="l-container">
    <ul class="menu-container">
      <% data.forEach(item => { %>
        <li class="menu-item">
          <a class="menu-link" href="<%- item.link -%>">
            <div class="hover-wrap">
              <div class="menu-image" style="background-image:url(<%= item.image %>);"></div>
            </div>
            <p class="menu-desc menu-desc-marcherant"><%- item.desc %>
              <i class="button-gradient-icon">
                <%- include('/partials/svg', {
                  name: 'arrow'
                }) %>
              </i>
            </p>
          </a>
        </li>
      <% }) %>
    </ul>
  </div>
</section>