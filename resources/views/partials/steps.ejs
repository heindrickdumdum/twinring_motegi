<% if(dataSteps) { %>
  <ol class="step-list">
    <%
    dataSteps.forEach(item => {
    %>
    <li class="step-item step-<%= item.step %>">
      <div class="step-item-inner">
        <div class="step-no">
          <img class="img-step" src="/assets/images/tsubasa/step.png" alt="Goal">
          <img class="step-number" src="/assets/images/tsubasa/<%= item.step %>.png" alt="Goal">
        </div>
        <div class="step-image">
          <div class="step-image-inner">

            <% if(item.imageSp !== '') { %>
              <img class="u-show-pc" src="<%= item.image %>" alt="Step <%= item.step %>">
              <img class="u-show-sp" src="<%= item.imageSp %>" alt="Step <%= item.step %>">
            <% } else { %>
              <img src="<%= item.image %>" alt="Step <%= item.step %>">
            <% } %>
          </div>
        </div>
        <div class="step-title"><%= item.heading %></div>
        <% if (item.subHeading != "") { %>
          <div class="step-subtitle"><%= item.subHeading %></div>
        <% } %>
        <p class="step-desc">
          <%= item.subText %>
        </p>
        <%if (item.step == 'goal') { %>
          <div class="media-bottom step-media-bottom">
            <div class="media-note media-note-tsubasa">
              <img class="media-note-flag" src="<%= mix('/assets/images/img-flag.png') %>" alt="">
              <img class="media-note-acorn" src="<%= mix('/assets/images/img-acorn.png') %>" alt="">
              <div class="media-note-text">
                乗れたら…<br>
                森を巡ってこれタネ！
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </li>
    <% }) %>
  </ol>
<% } %>
